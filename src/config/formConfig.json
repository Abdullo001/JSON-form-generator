{
  "title": "User Registration Form",
  "description": "A comprehensive form demonstrating various field types and cascading selects",
  "layout": [
    {
      "fields": [
        {
          "type": "text",
          "name": "firstName",
          "label": "First Name",
          "placeholder": "Enter your first name",
          "required": true,
          "cols": 6,
          "sm": 6,
          "md": 6,
          "lg": 6,
          "minLength": 2,
          "maxLength": 50
        },
        {
          "type": "text",
          "name": "lastName",
          "label": "Last Name",
          "placeholder": "Enter your last name",
          "required": true,
          "cols": 6,
          "sm": 6,
          "md": 6,
          "lg": 6,
          "minLength": 2,
          "maxLength": 50
        }
      ]
    },
    {
      "fields": [
        {
          "type": "email",
          "name": "email",
          "label": "Email Address",
          "placeholder": "Enter your email address",
          "required": true,
          "cols": 12,
          "sm": 12,
          "md": 8,
          "lg": 8
        }
      ]
    },
    {
      "fields": [
        {
          "type": "date",
          "name": "birthDate",
          "label": "Date of Birth",
          "required": true,
          "cols": 6,
          "sm": 6,
          "md": 6,
          "lg": 6
        },
        {
          "type": "number",
          "name": "age",
          "label": "Age",
          "placeholder": "Enter your age",
          "min": 18,
          "max": 100,
          "cols": 6,
          "sm": 6,
          "md": 6,
          "lg": 6
        }
      ]
    },
    {
      "fields": [
        {
          "type": "select",
          "name": "country",
          "label": "Country",
          "required": true,
          "cols": 6,
          "sm": 6,
          "md": 6,
          "lg": 6,
          "options": [
            { "value": "us", "label": "United States" },
            { "value": "uk", "label": "United Kingdom" },
            { "value": "ca", "label": "Canada" },
            { "value": "au", "label": "Australia" },
            { "value": "de", "label": "Germany" },
            { "value": "fr", "label": "France" },
            { "value": "jp", "label": "Japan" }
          ]
        },
        {
          "type": "select",
          "name": "state",
          "label": "State/Province",
          "required": true,
          "cols": 6,
          "sm": 6,
          "md": 6,
          "lg": 6,
          "dependsOn": {
            "field": "country"
          },
          "dependencyOptions": {
            "us": [
              { "value": "ny", "label": "New York" },
              { "value": "ca", "label": "California" },
              { "value": "tx", "label": "Texas" },
