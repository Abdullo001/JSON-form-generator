        {
          "type": "radio",
          "name": "gender",
          "label": "Gender",
          "required": true,
          "cols": 12,
          "sm": 12,
          "md": 12,
          "lg": 12,
          "options": [
            { "value": "male", "label": "Male" },
            { "value": "female", "label": "Female" }
          ]
        }
      ]
    },
    {
      "fields": [
        {
          "type": "checkbox",
          "name": "newsletter",
          "label": "Subscribe to newsletter",
          "cols": 6,
          "sm": 6,
          "md": 6,
          "lg": 6,
          "defaultValue": false
        },
        {
          "type": "checkbox",
          "name": "terms",
          "label": "I agree to the terms and conditions",
          "required": true,
          "cols": 6,
          "sm": 6,
          "md": 6,
          "lg": 6
        }
      ]
    },
    {
      "fields": [
        {
          "type": "textarea",
          "name": "bio",
          "label": "Biography",
          "placeholder": "Tell us about yourself...",
          "rows": 4,
          "maxLength": 500,
          "cols": 12,
          "sm": 12,
